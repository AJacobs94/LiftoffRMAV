
<!DOCTYPE html>

<html lang="en">

<head>
    @await Component.InvokeAsync("NToastNotify")
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LiftoffRMAV</title>
    <link rel="stylesheet" href="~/Shared/StyleSheet." />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: #A293A7">
    <style>
        .navbar-custom {
            background-color:#473A4B
           }

            .navbar-custom .navbar-brand,
            .navbar-custom .navbar-text {
                color:#DAF7A6
            }
        .logo-image {
            width: 46px;
            height: 46px;
            border-radius: 50%;
            overflow: hidden;
            margin-top: -6px;
        }
    </style>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom  box-shadow mb-3">
            <div class="logo-image">
                <img src="Astronaut.jpg" />
            </div>
            <div class="container">
                <ul class="nav navbar-nav">
                    <li> <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family:'OCR-A II',monospace">RMAV</a></li>
                    <li><a class="navbar-brand" asp-controller="Items" asp-action="Index" style="font-family:'OCR-A II',monospace">My List</a></li>
                </ul>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer text-muted">
        <div class="container">
            &copy; 2020 - LiftoffRMAV - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


<!DOCTYPE html>

<html lang="en">

<head>
    @await Component.InvokeAsync("NToastNotify")
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LiftoffRMAV</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-image: url(/images/videogame.jpg)">
    <style>
      table{
          border:none;
          background-color:rgba(7, 5, 5, 0.59)
          
      }
        h3,h4,h1,h2,h5,li,p,td,th{
            color:lightgray
            

        }

        body{
        background-image:url("/images/videogame.jpg");
        background-repeat: no-repeat;
        background-attachment:fixed;
        background-size:cover;
        }
        .navbar-custom {
            background-color: black
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .navbar-text {
                color:#0B5B13
            }
        .logo-image {
            width: 55px;
            height: 55px;
            border-radius: 50%;
            overflow: hidden;
            margin-top: -6px;
            background: transparent;
        }
    </style>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom  box-shadow mb-3">
            <div >
                <img src="/images/Astronaut.jpg" height="55"/>
            </div>
            <div class="container">
                <ul class="nav navbar-nav">
                    <li> <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'OCR-A II',monospace">RMAV</a></li>
                    <li><a class="navbar-brand" asp-controller="Items" asp-action="Index" style="font-family:'OCR-A II',monospace">My List</a></li>
                </ul>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="About" asp-action="Index" style="font-family:'OCR-A II',monospace">About</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer text-muted">
        <div class="container">
            &copy; 2020 - LiftoffRMAV - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
